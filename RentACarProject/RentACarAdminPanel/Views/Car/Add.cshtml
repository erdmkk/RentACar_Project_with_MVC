<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            Product Information
        </h4>
        <form asp-action="Add" asp-controller="Car" method="post">
            <div class="mb-3 mt-5">
                <label for="carName" class="form-label">Car Name</label>
                <input type="text" class="form-control" name="carName">
            </div> 
            <div class="mb-3">
                <label for="brandID" class="form-label">Model ID</label>
                <input type="text" class="form-control" name="brandID">
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control" name="quantity">
            </div>
            <div class="mb-3">
                <label for="doors" class="form-label">Doors</label>
                <input type="text" class="form-control" name="doors">
            </div>
            <div class="mb-3">
                <label for="carPrice" class="form-label">Price</label>
                <input type="number" class="form-control" name="carPrice">
            </div>
            <div class="mb-3">
                <label for="categoryID" class="form-label">Category ID</label>
                <input type="text" class="form-control" name="categoryID">
            </div>

            <button type="submit" class="btn btn-primary">ADD CAR</button>
        </form>

    </div>
</div>